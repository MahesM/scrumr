<?xml version='1.0' encoding='utf-8'?>
<!DOCTYPE hibernate-configuration PUBLIC "-//Hibernate/Hibernate Configuration DTD//EN" "http://hibernate.sourceforge.net/hibernate-configuration-3.0.dtd">
<hibernate-configuration>
<session-factory>
  <property name="hibernate.connection.driver_class">com.mysql.jdbc.Driver</property>
  <property name="hibernate.connection.url">jdbc:mysql://localhost/scrumr2</property>
  <property name="hibernate.connection.username">root</property>
  <property name="hibernate.connection.password">root</property>
  <property name="hibernate.connection.pool_size">10</property>
  <property name="show_sql">true</property>
  <property name="dialect">org.hibernate.dialect.MySQLDialect</property>
  <property name="hibernate.hbm2ddl.auto">update</property>
  <property name="current_session_context_class">thread</property>
  <mapping class="com.imaginea.scrumr.entities.ProjectEntity" />
  <mapping class="com.imaginea.scrumr.entities.UserEntity" />
  <mapping class="com.imaginea.scrumr.entities.UserStoryEntity" />
  <mapping class="com.imaginea.scrumr.entities.SprintEntity" />
  <mapping class="com.imaginea.scrumr.entities.CommentEntity" />
  <mapping class="com.imaginea.scrumr.entities.TodoEntity" />
</session-factory>
</hibernate-configuration>
